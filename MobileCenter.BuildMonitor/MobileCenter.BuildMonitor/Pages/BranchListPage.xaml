<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileCenter.BuildMonitor.Pages.BranchListPage">
    <StackLayout>
        <Button Command="{Binding RefreshCommand}" Text="Refresh" />
        <ListView x:Name="MyListview" ItemsSource="{Binding BranchStatuses}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding BranchStatus.Branch.Name}" />
                            <Label Text="{Binding Builds.Count}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>